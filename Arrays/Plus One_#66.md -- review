
def plus_one(arr):
  
  # Edge Case:
  if len(arr) == 0 :
    return None
    
  # set an array 
  output_arr = []
  
  # loop through the arr
  for i in range(len(arr)):
  
  # get the max of the arr
    num = max(arr)
    output_arr.append(num)
    
  # remove it 
    arr.remove(num)
    
  # return the array
  return output_arr
  
print plus_one(arr1)  
  
  
  
